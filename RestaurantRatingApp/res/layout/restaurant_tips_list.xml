<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:restaurantrating="http://schemas.android.com/apk/res/si.kubit.restaurantrating"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/icon_user" 
      android:layout_width="72px"
      android:layout_height="fill_parent"
      android:layout_marginTop="5px" />
    
    
    <LinearLayout
        android:id="@+id/twoLineListItem1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:paddingTop="5px" 
        android:paddingBottom="5px"
	     android:textStyle="normal" >
	
	    <TextView android:id="@+id/text_tip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:textSize="20sp"
	        restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal" />

	    <TextView android:id="@+id/text_user"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:textSize="15sp"
	        restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal" />
    </LinearLayout>

	
</LinearLayout>