<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:restaurantrating="http://schemas.android.com/apk/res/si.kubit.restaurantrating"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout android:layout_width="fill_parent" 
		style="@style/AppTitleLayout" 
	    android:orientation="horizontal" 
    android:background="@drawable/layout_rounded_top">

       <Button android:id="@+id/button_settings"
            android:background="@drawable/settings"
    			style="@style/AppTitleButtonSettings" />

		<si.kubit.restaurantrating.TextViewFont 
	        android:id="@+id/text_app_title"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:includeFontPadding="false"
	        restaurantrating:font_name="@string/font_big_text"
	        style="@style/AppTitle" 
	    	  android:text="@string/app_name" />

		<Button android:id="@+id/button_map"
            android:background="@drawable/map"
    			style="@style/AppTitleButtonMap"   />
	 </FrameLayout>	        
         	   

	<FrameLayout 
	    android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical" >
	    
	    <ListView android:id="@+id/user_rates_list"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
	          android:layout_weight="1"
	          android:drawSelectorOnTop="false">
		 </ListView>	 
	   

	    <FrameLayout 
	        android:layout_width="fill_parent" 
	     	  style="@style/AppFooterLayout" 
	    	android:orientation="horizontal">
	
		    <LinearLayout android:layout_width="wrap_content" 
		     	android:gravity="center" 
			   	android:paddingTop="5dip"
				android:paddingLeft="40dip"
				android:layout_gravity="left|top"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				
		       <Button android:id="@+id/button_friends"
		           android:background="@drawable/friends"
		           android:layout_width="39sp"
		           android:layout_height="26sp" />
		       
			    <si.kubit.restaurantrating.TextViewFont
			        android:id="@+id/text_user"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        restaurantrating:font_name="@string/font_small_text"
			        style="@style/TextUser.Small"
			        android:text="@string/friends" />
	       </LinearLayout>
	        
	       <LinearLayout android:layout_width="wrap_content" 
		     	android:gravity="center" 
			   	android:paddingTop="5dip"
				android:layout_height="wrap_content"
				android:paddingRight="40dip"
				android:layout_gravity="right|top"
				android:orientation="vertical">
				
		       <Button android:id="@+id/button_user"
		           android:background="@drawable/user"
		           android:layout_width="30sp"
		           android:layout_height="26sp" />
		       
			    <si.kubit.restaurantrating.TextViewFont
			        android:id="@+id/text_user"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        restaurantrating:font_name="@string/font_small_text"
			        style="@style/TextUser.Small"
			        android:text="@string/user" />
	       </LinearLayout>
	    </FrameLayout>	        

    	<LinearLayout android:layout_width="wrap_content" 
	     	style="@style/AppFooterLayout" 
	    	android:background="@drawable/rate_food_background"
    	   	android:layout_height="wrap_content"
			android:orientation="vertical">
			
	       <Button android:id="@+id/button_rate"
           		android:background="@drawable/rate_food"
    	   		android:layout_width="40sp"
           		android:layout_height="63sp" />
	       
		    <si.kubit.restaurantrating.TextViewFont
		        android:id="@+id/text_user"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        restaurantrating:font_name="@string/font_small_text"
		        style="@style/TextUser.Small"
		        android:text="@string/rate_food" />
       </LinearLayout>  

	  </FrameLayout>	    



</LinearLayout>