<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:restaurantrating="http://schemas.android.com/apk/res/si.kubit.restaurantrating"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout android:layout_width="fill_parent" 
		style="@style/AppTitleLayout" 
	    android:orientation="horizontal">

       <Button android:id="@+id/button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="settings" />

		<LinearLayout 
	    	android:layout_weight="1"
	    	android:layout_width="0dip"
	    	android:layout_height="0dip"/>

	    <si.kubit.restaurantrating.TextViewFont 
	        android:id="@+id/text_app_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        restaurantrating:font_name="@string/font_big_text"
	        style="@style/AppTitle" 
	    	android:text="@string/app_name" />

	    <LinearLayout 
	    	android:layout_weight="1"
	    	android:layout_width="0dip"
	    	android:layout_height="0dip"/>
	    
	    <Button android:id="@+id/button_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="map" />
	 </LinearLayout>	        
         	   
    <ListView android:id="@+id/user_rates_list"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
          android:layout_weight="1"
          android:drawSelectorOnTop="false">
	 </ListView>	 
   
    <LinearLayout android:layout_width="fill_parent" 
     	android:gravity="center" 
	   android:layout_height="50dip"
		android:orientation="horizontal">
       <Button android:id="@+id/button_friends"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="friends" />

       <Button android:id="@+id/button_rate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="rate" />

       <Button android:id="@+id/button_user"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="user" />

    </LinearLayout>	        
        
</LinearLayout>