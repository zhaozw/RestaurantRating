<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:restaurantrating="http://schemas.android.com/apk/res/si.kubit.restaurantrating"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" 
    android:orientation="horizontal" >
    
    <LinearLayout android:layout_width="100sp" 
     	android:gravity="center_vertical|left" 
     	android:layout_height="fill_parent"
		android:orientation="horizontal" >
		
	    <si.kubit.restaurantrating.TextViewFont
	        android:id="@+id/text_rate_item"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        restaurantrating:font_name="@string/font_big_text"
	        style="@style/TextRateItem" 
	        android:layout_weight="1" />
	 </LinearLayout> 
	 
    <LinearLayout android:layout_width="fill_parent" 
     	android:gravity="center" 
     	android:layout_height="fill_parent"
		android:orientation="horizontal">
		
		 <TextView
		    android:id="@+id/rate_item_value"
		    android:layout_height="0sp"
		    android:layout_width="0sp"
		    android:visibility="invisible"
			android:text="0" />
  
		 <si.kubit.restaurantrating.TextViewFont
		    android:id="@+id/rate_item_1"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content" />

		<LinearLayout android:layout_weight="1" android:layout_width="10dip"	android:layout_height="0dip"/>
		 
		<si.kubit.restaurantrating.TextViewFont
		    android:id="@+id/rate_item_2"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"/>

		<LinearLayout android:layout_weight="1" android:layout_width="10dip"	android:layout_height="0dip"/>
		
		<si.kubit.restaurantrating.TextViewFont
		    android:id="@+id/rate_item_3"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"/>
		
		<LinearLayout android:layout_weight="1" android:layout_width="10dip"	android:layout_height="0dip"/>

		<si.kubit.restaurantrating.TextViewFont
		    android:id="@+id/rate_item_4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />

		<LinearLayout android:layout_weight="1" android:layout_width="10dip"	android:layout_height="0dip"/>

		<si.kubit.restaurantrating.TextViewFont
		    android:id="@+id/rate_item_5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    restaurantrating:font_name="@string/font_big_text"
			style="@style/TextUserUnder.Big"  />
	    
		<LinearLayout android:layout_weight="1" android:layout_width="10dip"	android:layout_height="0dip"/>
		
	 </LinearLayout> 
	 
	   
</LinearLayout>