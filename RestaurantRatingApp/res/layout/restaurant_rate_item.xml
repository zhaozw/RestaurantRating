<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:restaurantrating="http://schemas.android.com/apk/res/si.kubit.restaurantrating"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left" 
    android:orientation="horizontal" >
    
    <LinearLayout android:layout_width="80sp" 
     	android:gravity="left" 
     	android:layout_height="fill_parent"
		android:orientation="horizontal" >
		
	    <TextView android:id="@+id/text_rate_item"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:textSize="25sp"
	        restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal" 
	        android:layout_weight="0"/>        
	 </LinearLayout> 
	 
    <LinearLayout android:layout_width="fill_parent" 
     	android:gravity="left" 
     	android:layout_height="fill_parent"
		android:orientation="horizontal" >
		
		 <TextView
		    android:id="@+id/rate_item_1"
		    android:background="@drawable/rate_item"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"/>

		 <TextView
		    android:id="@+id/rate_item_2"
		    android:background="@drawable/rate_item"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"/>

		 <TextView
		    android:id="@+id/rate_item_3"
		    android:background="@drawable/rate_item"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"/>

		 <TextView
		    android:id="@+id/rate_item_4"
		    android:background="@drawable/rate_item"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"/>

		 <TextView
		    android:id="@+id/rate_item_5"
		    android:background="@drawable/rate_item"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"/>
	    
	 </LinearLayout> 
	 
	   
</LinearLayout>