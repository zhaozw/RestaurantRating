<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:restaurantrating="http://schemas.android.com/apk/res/si.kubit.restaurantrating"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout android:layout_width="fill_parent" 
     	android:gravity="center" 
	   android:layout_height="50dip"
		android:orientation="horizontal">

       <Button android:id="@+id/button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="settings" />

	    <TextView android:id="@+id/text_app_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:gravity="center" 
	   	  android:textSize="20sp"
		  	  restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal" 
	        android:text="@string/app_name" />

	    <Button android:id="@+id/button_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="map" />
	 </LinearLayout>	        
         	   
    <LinearLayout android:layout_width="fill_parent" 
     	android:gravity="center" 
	   android:layout_height="30dip"
		android:orientation="horizontal">

	    <TextView android:id="@+id/text_search"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:gravity="center" 
	   	  android:textSize="20sp"
		  	  restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal" 
	        android:text="search" />
	 </LinearLayout>	        
        
    <ListView android:id="@+id/restaurant_list"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
          android:layout_weight="1"
          android:drawSelectorOnTop="false">
	 </ListView>	 
   
    <LinearLayout android:layout_width="fill_parent" 
     	android:gravity="center" 
	   android:layout_height="50dip"
		android:orientation="horizontal">
	    <TextView android:id="@+id/text_places_nearby"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:gravity="center" 
	   	  android:textSize="20sp"
		  	  restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal" 
	        android:text="places nearby" />

    </LinearLayout>	        
        
</LinearLayout>