<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:restaurantrating="http://schemas.android.com/apk/res/si.kubit.restaurantrating"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout android:layout_width="fill_parent" 
     	android:gravity="center" 
	   android:layout_height="50dip"
		android:orientation="horizontal">

       <Button android:id="@+id/button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="settings" />

	    <TextView android:id="@+id/text_app_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:gravity="center" 
	   	  android:textSize="20sp"
		  	  restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal" 
	        android:text="@string/app_name" />

	    <Button android:id="@+id/button_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="map" />
	 </LinearLayout>	        
         	   

    
    
    
    
    <LinearLayout android:layout_width="fill_parent" 
     	android:gravity="center" 
	   android:layout_height="100dip"
		android:orientation="horizontal">

	    <LinearLayout android:layout_height="wrap_content" 
	     	android:gravity="center" 
		  	android:layout_width="wrap_content"
			android:orientation="vertical">
			
		    <TextView android:id="@+id/text_rate"
		        android:layout_marginTop="1dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="60sp"
		        restaurantrating:font_name="@string/font_text"
		        android:textStyle="normal" />
		    
		    <TextView android:id="@+id/text_reviews"
		        android:layout_marginTop="1dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="15sp"
		        restaurantrating:font_name="@string/font_text"
		        android:textStyle="normal" />
		    
		 </LinearLayout>
        
	    <LinearLayout
	        android:id="@+id/twoLineListItem3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:paddingTop="5px" 
	        android:paddingBottom="5px"
	        android:textStyle="normal" >
		
		    <TextView android:id="@+id/text_restaurant_name"
		        android:layout_marginTop="1dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:includeFontPadding="false"
		        android:textSize="40sp"
		        restaurantrating:font_name="@string/font_text"
		        android:textStyle="normal" />
		
		    <TextView android:id="@+id/text_restaurant_category"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:includeFontPadding="false"
		        android:textSize="20sp"
		        restaurantrating:font_name="@string/font_text"
		        android:textStyle="normal" />
	
		    <TextView android:id="@+id/text_restaurant_distance"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:includeFontPadding="false"
		        android:textSize="15sp"
		        restaurantrating:font_name="@string/font_text"
		        android:textStyle="normal" />
		    
	    </LinearLayout>
	 </LinearLayout>	        
        

    
    
    <LinearLayout android:layout_width="fill_parent" 
     	android:gravity="left" 
     	android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_weight="10">

	    <TextView android:id="@+id/text_restaurant_tip_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:textSize="15sp"
	        restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal" 
	        android:text="rate it!"
	        android:layout_weight="0"/>
	    
	    <TextView android:id="@+id/text_restaurant_tip_food"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:textSize="30sp"
	        restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal"
	        android:text="@string/tip_food"
	        android:layout_weight="1" />
	    	    
	    <TextView android:id="@+id/text_restaurant_tip_ambient"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:textSize="30sp"
	        restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal"
	        android:text="@string/tip_ambient"
	        android:layout_weight="1" />
	    
	    <TextView android:id="@+id/text_restaurant_tip_service"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:textSize="30sp"
	        restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal"
	        android:text="@string/tip_service"
	        android:layout_weight="1" />
	    	    
	    <TextView android:id="@+id/text_restaurant_tip_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:textSize="30sp"
	        restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal"
	        android:text="@string/tip_value"
	        android:layout_weight="1" />
	    
        	    
    </LinearLayout>	     
    
    
    
    
    
    
    
    	 
   
    <LinearLayout android:layout_width="fill_parent" 
     	android:gravity="center" 
	   android:layout_height="50dip"
		android:orientation="horizontal">
	    <Button android:id="@+id/button_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tips" />
	    
	    <Button android:id="@+id/button_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="photos" />
	    
    </LinearLayout>	        
        
</LinearLayout>