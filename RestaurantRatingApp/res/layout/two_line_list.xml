<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:restaurantrating="http://schemas.android.com/apk/res/si.kubit.restaurantrating"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/text_rate"
        android:layout_marginTop="1dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
		restaurantrating:font_name="@string/font_text"
	    android:textStyle="normal" />
    
    <TwoLineListItem
        android:id="@+id/twoLineListItem1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:paddingTop="5px" 
        android:paddingBottom="5px"
	     android:textStyle="normal" >
	
	    <TextView android:id="@+id/text_user"
	        android:layout_marginTop="1dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:textSize="40sp"
		  	restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal" />
	
	    <TextView android:id="@+id/text_restaurant"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="60px" 
	        android:includeFontPadding="false"
	        android:textSize="20sp"
		  	restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal" />

	    <TextView android:id="@+id/text_hours_ago"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="90px" 
	        android:includeFontPadding="false"
	        android:textSize="20sp"
		  	restaurantrating:font_name="@string/font_text"
	        android:textStyle="normal" />
    </TwoLineListItem>

	
</LinearLayout>