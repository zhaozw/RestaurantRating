<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="SplashScreen">
		<item name="android:padding">0dp</item>
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:windowFrame">@null</item>
	</style>

	
	<style name="TitleText">
      <item name="android:textColor">#FFFFFF</item>
      <item name="android:textSize">36sp</item>
      <item name="android:paddingTop">0dip</item>
      <item name="android:paddingBottom">0dip</item>
      <item name="android:gravity">center</item>
		<item name="android:singleLine">true</item>
    </style>

	<style name="MenuText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

	<style name="MessageBoxText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

	<style name="MenuText.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">250sp</item>
    </style>

	<style name="MenuText.Checkbox">
        <item name="android:textSize">16sp</item>
    </style>

	<style name="EditText">
        <item name="android:layout_width">250sp</item>
    </style>

	<style name="SeekBar">
        <item name="android:layout_width">200sp</item>
    </style>

	<style name="MenuLayout">
        <item name="android:layout_width">250sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

	<style name="LayoutBorderHorizontal">
        <item name="android:layout_width">16dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
	<style name="LayoutBorderVertical">
        <item name="android:layout_height">16dip</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="MenuText.Score">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">250sp</item>
    </style>
    
	<style name="ButtonText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16dip</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
    </style>   
    
	<style name="ButtonText.Main">
        <item name="android:width">170dip</item>
    </style>   

	<style name="ButtonText.Long">
        <item name="android:layout_width">520dip</item>
    </style>
       
	<style name="ButtonText.Middle">
        <item name="android:layout_width">250dip</item>
    </style>

	<style name="ButtonText.Short">
        <item name="android:layout_width">170dip</item>
    </style>   

	<style name="ButtonText.Play">
        <item name="android:textSize">40dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingTop">165dip</item>
        <item name="android:paddingLeft">50dip</item>
    </style>

	<style name="ButtonText.PlaySmall">
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

	<style name="Anchor">
        <item name="android:textSize">16dip</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">#BD5012</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:layout_width">250sp</item>
    </style>
    
	<style name="ChecboxLayout">
        <item name="android:layout_height">42dip</item>
    </style>
    
    <style name="ScoreText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="ScoreText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScoreText.Right">
        <item name="android:gravity">right</item>
    </style>
    
    <style name="ScoreText.Bold.Right">
        <item name="android:gravity">right</item>
    </style>    

    <style name="ScoreText.Bold.Left">
        <item name="android:gravity">left</item>
    </style>    

    <style name="ScoreText.Bold.Left.Big">
        <item name="android:textSize">20sp</item>
    </style>    

    <style name="ScoreTable">
        <item name="android:layout_width">500dip</item>
    </style> 

       
</resources>